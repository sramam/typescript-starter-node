{
  "name": "typescript-starter-node",
  "version": "1.1.0",
  "description": "A starter package for typescript projects",
  "main": "dist/index.js",
  "scripts": {
    "check-engines": "check-engines",
    "staged-mods-ok": "git-mods --staged_ok",
    "no-mods": "git-mods",
    "clean": "rimraf build coverage",
    "clean:dist": "rimraf dist",
    "lint": "tslint -c tslint.json src/**/*.ts",
    "compile:build": "tsc",
    "compile:dist": "tsc -p tsconfig.dist.json",
    "compile:watch": "tsc -w",
    "sh": "npm-sh",
    "secure": "nsp check",
    "check": "npm-check -u",
    "lcheck": "license-checker --csv | grep -v \"MIT.*\\|BSD.*\\|ISC.*\\|WTFPL.*\\|CC-.*\\|Apache.*\"",
    "license-checker": "license-checker --exclude \"MIT, MIT*, MIT/X11, MIT License, BSD, BSD-2-Clause, BSD-3-Clause, BSD*, Apache, Apache-2.0, CC0-1.0, ISC, Public DOmain, WTFPL, (BSD-2-Clause OR MIT OR Apache-2.0), Apache License, Version 2.0, (MIT AND CC-BY-3.0)\"",
    "test-with-cover": "istanbul cover ./node_modules/.bin/_mocha",
    "test-without-cover": "mocha",
    "remap-coverage": "node ./scripts/remapped-coverage.js --output ./coverage/typescript",
    "coverage": "istanbul check-coverage ./coverage/typescript/coverage.json",
    "build": "run-batch",
    "build:dist": "run-batch",
    "build:watch": "cross-env NODE_ENV=production run-batch",
    "test": "run-batch"
  },
  "run-batch": {
     "build": [
      "check-engines",
      "clean",
      "lint",
      "compile:build",
      "test"
    ],
    "build:dist": [
      "check-engines",
      "clean:dist",
      "lint",
      "compile:dist",
      "test"
    ],
    "build:watch": [
      "check-engines",
      "compile:watch"
    ],
    "test": [
      "check-engines",
      "test-with-cover",
      "remap-coverage"
    ]
  },
  "pre-commit": [
    "test",
    "build:dist",
    "staged-mods-ok"
  ],
  "pre-push": [
    "coverage",
    "check",
    "secure",
    "test",
    "no-mods"
  ],
  "keywords": [
    "TypeScript",
    "starter",
    "node",
    "boilerplate"
  ],
  "author": "Shishir Ramam",
  "license": "Apache 2.0",
  "devDependencies": {
    "@types/chai": "^3.4.30",
    "@types/mocha": "^2.2.29",
    "@types/circular-json": "^0.1.29",
    "@types/node": "^6.0.38",
    "@types/semver": "^5.3.29",
    "blanket": "^1.2.3",
    "chai": "^3.5.0",
    "circular-json": "^0.3.1",
    "commander": "^2.9.0",
    "cross-env": "^2.0.0",
    "graceful-fs": "^4.1.5",
    "istanbul": "^0.4.4",
    "licensecheck": "^1.0.0",
    "mocha": "^3.0.1",
    "npm-check": "^5.2.3",
    "npm-run-batch": "0.0.4",
    "npm-sh": "^1.0.1",
    "nsp": "^2.6.1",
    "nsp-formatter-checkstyle": "^1.0.1",
    "nsp-formatter-remarkup": "^1.0.2",
    "pre-commit": "^1.1.3",
    "pre-push": "^0.1.1",
    "remap-istanbul": "^0.6.4",
    "rimraf": "^2.5.4",
    "shelljs-nodecli": "^0.1.1",
    "ts-node": "^1.2.2",
    "tslint": "^3.14.0",
    "typescript": "^2.1.0-dev.20160827"
  },
  "dependencies": {
    "check-engines": "^1.2.0",
    "semver": "^5.3.0"
  },
  "standard": {
    "env": [
      "mocha"
    ]
  },
  "engines": {
    "node": ">=6.0.0"
  }
}
