{
  "name": "typescript-starter-node",
  "version": "2.0.0",
  "description": "A starter package for typescript projects",
  "keywords": [
    "TypeScript",
    "starter",
    "node",
    "boilerplate",
    "ava",
    "nyc"
  ],
  "author": "Shishir Ramam",
  "repository": "sramam/typescript-starter-node",
  "license": "Apache-2.0",
  "private": false,
  "engines": {
    "node": ">=6.0.0"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": "dist/cli.js",
  "files": [
    "dist",
    "docs",
    "scripts"
  ],
  "scripts": {
    "commit": "git-cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "todos": "leasot --exit-nicely ./src ./config",
    "staged-mods-ok": "git-mods --staged_ok",
    "no-mods": "git-mods",
    "clean": "rimraf build .nyc_output coverage",
    "clean:dist": "rimraf dist",
    "lint": "tslint -c tslint.json --project ./tsconfig.json --format stylish",
    "compile:build": "tsc",
    "compile:dist": "tsc -p tsconfig.dist.json",
    "compile:watch": "tsc -w",
    "sh": "npm-sh",
    "secure": "nsp check",
    "check": "npm outdated",
    "check-coverage": "nyc check-coverage --lines 95 --functions 95 --branches 95 --statements 95",
    "coveralls-report": "nyc report --reporter=text-lcov | coveralls",
    "test-with-cover": "cross-env NODE_ENV=test nyc -r html -r text-summary ava --verbose",
    "test-without-cover": "cross-env NODE_ENV=test ava --verbose",
    "build": "npm-run-batch",
    "qt": "npm-run-batch",
    "build:watch": "cross-env NODE_ENV=production run-batch",
    "pkg-ok": "pkg-ok",
    "precommit": "run-batch",
    "prepush": "run-batch",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "postinstall": "node ./scripts/postinstall.js"
  },
  "run-batch": {
    "build": [
      [
        "clean",
        "clean:dist"
      ],
      "lint",
      "compile:build",
      [
        "test-with-cover",
        "compile:dist"
      ],
      "todos"
    ],
    "qt": [
      "compile:build",
      "test-without-cover"
    ],
    "build:watch": [
      "compile:watch"
    ],
    "precommit": [
      "check-coverage",
      "pkg-ok",
      "staged-mods-ok"
    ],
    "prepush": [
      "secure",
      "no-mods"
    ]
  },
  "devDependencies": {
    "@types/node": "^8.5.2",
    "@types/semver": "^5.3.31",
    "@types/winston": "^2.3.7",
    "ava": "^0.24.0",
    "cli-inspector": "^1.0.6",
    "commitizen": "^2.9.6",
    "conventional-changelog-cli": "^1.3.5",
    "coveralls": "^3.0.0",
    "cross-env": "^5.1.3",
    "cz-conventional-changelog": "^2.1.0",
    "git-mods": "^1.0.7",
    "graceful-fs": "^4.1.11",
    "husky": "^0.14.3",
    "leasot": "^4.13.0",
    "mkdirp": "^0.5.1",
    "node-emoji": "^1.5.1",
    "npm-run-batch": "0.0.6",
    "nsp": "^3.1.0",
    "nyc": "^11.4.1",
    "pkg-ok": "^1.0.1",
    "rimraf": "^2.6.1",
    "semantic-release": "^11.0.2",
    "strip-ansi": "^4.0.0",
    "tslint": "^5.8.0",
    "typescript": "^2.6.2",
    "typestrict": "0.0.6"
  },
  "dependencies": {
    "chalk": "^2.3.0",
    "commander": "^2.12.2",
    "execa": "^0.8.0",
    "inquirer": "^4.0.1",
    "parse-git-config": "^1.1.1",
    "runtime-engine-check": "^1.0.0",
    "semver": "^5.3.0",
    "winston-cfg": "^1.0.11"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "ava": {
    "serial": false,
    "files": [
      "build/**/test.js",
      "build/**/test/**/*.js"
    ],
    "source": [
      "build/**/*.js"
    ]
  },
  "nyc": {
    "exclude": [
      "config/**/*",
      "build/**/test/**/*.*",
      "build/**/test.js",
      "dist"
    ]
  }
}
